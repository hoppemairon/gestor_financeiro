  "indicadores_especificos": [
    {
      "nome": "Receita por Hectare",
      "formula": "receita_total / hectares_total",
      "unidade": "R$/ha",
      "interpretacao": "Receita gerada por hectare plantado"
    },
    {
      "nome": "Custo por Hectare",
      "formula": "custo_total / hectares_total",
      "unidade": "R$/ha",
      "interpretacao": "Custo total por hectare plantado"
    },
    {
      "nome": "Margem por Hectare",
      "formula": "(receita_total - custo_total) / hectares_total",
      "unidade": "R$/ha",
      "interpretacao": "Margem líquida por hectare"
    },
    {
      "nome": "Custo por Saca",
      "formula": "custo_total / sacas_total",
      "unidade": "R$/saca",
      "interpretacao": "Custo para produzir uma saca"
    },
    {
      "nome": "Break-Even Yield",
      "formula": "custo_total / (sacas_total * preco_medio_saca)",
      "unidade": "sacas/ha",
      "interpretacao": "Produtividade mínima para cobrir custos"
    },
    {
      "nome": "Margem por Cultura",
      "formula": "(receita_cultura - custo_cultura) / receita_cultura * 100",
      "unidade": "%",
      "interpretacao": "Margem percentual por tipo de cultura"
    }
  ],
